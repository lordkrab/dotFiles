# This is Git's per-user configuration file.
[user]
name = Jakob Berg
email = jmberg121@gmail.com
[init]
	defaultBranch = mainline
[pull]
	rebase = true
[diff]
	tool = nvimdiff
[difftool]
	prompt = false
[color]
	ui = always
[delta] # brew install git-delta
    paging = always
    pager = "less -R -M"
    line-numbers = true
    plus-style = "syntax #003b1c"
    minus-style = "syntax #4a0c0c"
[core]
    pager = delta
